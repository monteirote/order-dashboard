@model IEnumerable<OrderDashboard.ViewModels.ServiceOrderListViewModel>

@{
    ViewData["Title"] = "Ordens de Serviço";
}

<style>
    th, td {
        text-align: center
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <a asp-controller="ServiceOrder" asp-action="ServiceOrderForm" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nova Ordem de Serviço
    </a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Número da OS</th>
            <th>Cliente</th>
            <th>Data de Entrega</th>
            <th>Qtd. de Quadros</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OSNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@item.DueDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.FramesCount)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td class="d-flex justify-content-start">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-2">
                        <i class="bi bi-eye"></i> Detalhes
                    </a>

                    @if (item.Status == "Em Andamento")
                    {
                        <form asp-action="MarkAsComplete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Tem certeza que deseja marcar esta OS como completa?');">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-check-circle"></i> Completar
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>