@{
    ViewData["Title"] = "Gerenciamento de Opções";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3>Tipos de Vidro</h3>
            <a asp-action="CreateGlassType" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Adicionar Novo
            </a>
        </div>
        <table class="table table-bordered table-striped">
            <tbody>
                @foreach (var item in ViewBag.GlassTypes)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-end" style="width: 100px;">
                            <form asp-action="DeleteGlassType" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este tipo de vidro?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3>Tipos de Moldura</h3>
            <a asp-action="CreateFrameType" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Adicionar Novo
            </a>
        </div>
        <table class="table table-bordered table-striped">
            <tbody>
                @foreach (var item in ViewBag.FrameTypes)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-end" style="width: 100px;">
                            <form asp-action="DeleteFrameType" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este tipo de moldura?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>