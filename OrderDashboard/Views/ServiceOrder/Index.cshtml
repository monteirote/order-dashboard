@model IEnumerable<OrderDashboard.ViewModels.ServiceOrderListViewModel>

@{
    ViewData["Title"] = "Ordens de Serviço";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <a asp-controller="ServiceOrder" asp-action="ServiceOrderForm" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nova Ordem de Serviço
    </a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().OSNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().CustomerName)</th>
            <th>@Html.DisplayNameFor(model => model.First().DueDate)</th>
            <th>Qtd. de Quadros</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OSNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@item.DueDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.FramesCount)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Detalhes
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>